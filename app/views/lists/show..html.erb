<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://loremflickr.com/320/200/restaurant,<%= @restaurant.category.downcase %>/all?lock=<%= @restaurant.id %>);">
  <div class="container">
  </div>
</div>
<div class="container mt-2">
  <div class="row justify-content-around">
    <div class="col-12 col-sm-8" data-controller="insert-review">
      <p>
        <%= link_to '< list', list_path, class: 'btn-light opacity-25 text-decoration-none' %>
      </p>
      <div class="d-flex align-items-center">
        <h1 class="m-0"><%= @restaurant.name %></h1>
        <p class="m-0 ms-2" style="font-size: 0.8em">
          <% @list.rating.times do %>
            <i class="fas fa-star"></i>
          <% end %>
          <% (5 - @list.rating).times do %>
            <i class="far fa-star"></i>
          <% end %>
        </p>
      </div>
      <p class="fw-lighter opacity-75 mt-2"><%= Faker::list.description  %></p>
      <h3>
        Reviews
        <%= link_to '+', new_list_bookmark_path(@restaurant)  %>
      </h3>
      <ul>
        <% if @list.reviews.any? %>
          <% @list.reviews.each do |review| %>
            <li>
              <%= review.content %>
              <%= link_to 'x', review_path(review), data: { turbo_method: :delete, turbo_confirm: 'Delete review?' } %>
            </li>
          <% end %>
        <% else %>
          <li>No reviews yet</li>
        <% end %>
      </ul>

    </div>
    <div class="col-12 col-sm-4 mt-5">
      <%= render 'list/side_info' %>
    </p>
  </div>
</div>
